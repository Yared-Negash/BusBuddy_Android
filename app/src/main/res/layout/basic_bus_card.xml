<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_margin="8dp">

    <RelativeLayout
        android:id="@+id/cardRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/Bus_Stop_Location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="DisneyLand"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/Bus_Stop_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Bus_Stop_Location"
            android:layout_alignLeft="@id/Bus_Stop_Location"
            android:layout_marginTop="8dp"
            android:text="18809"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/Bus_ETA_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Bus_Stop_ID"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">
        <TextView
            android:id="@+id/etaTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bus 73(Vehicle 8850) To MAIN STREET + UNIVERSITY AVE is arriving in 10 Min\n\nBus 73(Vehicle 8850) To MAIN STREET + UNIVERSITY AVE is arriving in 10 Min\n\n"

            android:textColor="@android:color/black"/>
        </LinearLayout>

        <View
            android:id="@+id/Card_Divider"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@id/Bus_ETA_Layout"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/deleteStop_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Card_Divider"
            android:layout_alignRight="@id/Card_Divider"
            android:text="Delete Stop"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>